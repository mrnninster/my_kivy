#:kivy 2.0.0
#: import NoTransition kivy.uix.screenmanager.NoTransition
#: import primaryTextColor PyFiles.AppFunctions.primaryTextColor
#: import secondaryTextColor PyFiles.AppFunctions.secondaryTextColor
#: import secondaryDarkColor PyFiles.AppFunctions.secondaryDarkColor
#: import secondaryLightColor PyFiles.AppFunctions.secondaryLightColor

<ScreenManagement>:
    transition: NoTransition()
    Intro_view_Screen:
    Login_view_Screen:
    Signup_view_Screen:


<Intro_view_Screen>:
    name: "intro_Screen"
    Image:
        id: "logo"
        source: "assets/i4.jpg"
        size_hint: None, None
        size: 200, 50
        allow_stretch: True
        keep_ratio: False
        pos_hint: {"center_x": 0.5}
        y: root.height * 0.8

    BoxLayout:
        id: "Welcome"
        orientation: "vertical"
        adaptive_size: True
        pos_hint: {"center_x": .5}

        MDLabel:
            theme_text_color: "Custom"
            text_color: 255/255, 255/255, 255/255, 1
            adaptive_size: True
            halign: "center"
            valign: "center"
            font_style: "H5"
            text: "ACTIVITY MANAGER"

        MDLabel:
            theme_text_color: "Custom"
            text_color: 255/255, 255/255, 255/255, 1
            adaptive_height: True
            halign: "center"
            font_style: "Overline"
            text: "Powered By\n AGRO AI"


<Login_view_Screen>:
    name: "log_in_Screen"
    GridLayout:
        id: "sign_in_page"
        rows: 2
        row_force_default: True
        row_default_height: 150

        MDLabel:
            theme_text_color: "Custom"
            text_color: 255/255, 255/255, 255/255, 1
            adaptive_size: True
            halign: "center"
            valign: "center"
            font_style: "H5"
            text: "SIGN IN"

        GridLayout:
            cols: 3
            rows: 4
            row_force_default: True
            row_default_height: 70

            MDLabel:
                adaptive_size: True
                halign: "center"
                valign: "center"

            MDTextField:
                id: Email
                hint_text: "Enter Email"
                helper_text: "Your Email"
                adaptive_size: True
                icon_right: "account"
                icon_right_color: 255/255, 255/255, 255/255, 1
                theme_text_color: "Custom"
                text_color: 255/255, 255/255, 255/255, 1
                line_color_focus: 255/255, 255/255, 255/255, 1

            MDLabel:
                adaptive_size: True
                halign: "center"
                valign: "center"

            MDLabel:
                adaptive_size: True
                halign: "center"
                valign: "center"

            MDTextField:
                id: password
                hint_text: "Password"
                helper_text: "Your Password"
                helper_text_mode: "on_focus"
                password: True
                adaptive_size: True
                min_width: 250
                icon_right: "account-key"
                icon_right_color: 255/255, 255/255, 255/255, 1
                theme_text_color: "Custom"
                text_color: 255/255, 255/255, 255/255, 1
                line_color_focus: 255/255, 255/255, 255/255, 1

            MDLabel:
                adaptive_size: True
                halign: "center"
                valign: "center"

            MDLabel:
                adaptive_size: True
                halign: "center"
                valign: "center"

            MDRaisedButton:
                adaptive_size: True
                text: "SIGN IN HERE"
                md_bg_color: 158/255, 40/255, 24/255, 1
                text_color: 255/255, 255/255, 255/255, 1
                line_color: 105/255, 0/255, 0/255, 1
                halign: "center"
                pos_hint: "center"
                on_release: app.check(Email.text,password.text)

            MDLabel:
                adaptive_size: True
                halign: "center"
                valign: "center"

            MDLabel:
                adaptive_size: True
                halign: "center"
                valign: "center"

            GridLayout:
                cols: 2
                row_force_default: True
                row_default_height: 40
                

                MDLabel:
                    theme_text_color: "Custom"
                    text_color: 255/255, 255/255, 255/255, 1
                    adaptive_size: True
                    halign: "center"
                    valign: "center"
                    font_style: "Overline"
                    text: "SIGN UP "

                MDLabel:
                    theme_text_color: "Custom"
                    text_color: 255/255, 255/255, 255/255, 1
                    adaptive_size: True
                    halign: "left"
                    valign: "center"
                    font_style: "Overline"
                    text: " RESET PASSWORD"

            MDLabel:
                adaptive_size: True
                halign: "center"
                valign: "center"



<Signup_view_Screen>:
    name: "sign_up_Screen"
    MDCard:
        id: container
        md_bg_color: 0,0,0,1
        size_hint: None, None
        size: root.width * 0.9 , root.height * 0.8
        pos_hint: {"center_x": .5, "center_y":.5}
        orientation: "vertical"
        padding: 15
        spacing: 30
        
        MDLabel:
            id: banner
            text: "SIGN UP"
            font_style: "Button"
            font_size: 45
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            color: primaryTextColor

        ScrollView:
            id: form_container
            do_scroll_x: False
            do_scroll_y: True

            MDGridLayout:
                padding: 15
                size_hint_x: 1
                size_hint_y: None
                rows: 8
                rows_minimum: {0:60,1:60,2:60,3:60,4:60,5:60,6:60,7:60}
                height: 600

                MDTextField:
                    id: first_name
                    hint_text: "First Name*"
                    required: True
                    text_color: secondaryDarkColor
                    color_mode: "custom"
                    line_color_focus: 1,1,1, 1
                    mode: "rectangle"

                MDTextField:
                    id: last_name
                    hint_text: "Last Name*"
                    required: True
                    text_color: secondaryDarkColor
                    color_mode: "custom"
                    line_color_focus: 1, 1, 1, 1
                    mode: "rectangle"
                
                MDTextField:
                    id: company
                    hint_text: "Company"
                    text_color: secondaryDarkColor
                    color_mode: "custom"
                    line_color_focus: 1, 1, 1, 1
                    mode: "rectangle"

                MDTextField:
                    id: email
                    hint_text: "Email*"
                    required: True
                    text_color: secondaryDarkColor
                    color_mode: "custom"
                    line_color_focus: 1, 1, 1, 1
                    mode: "rectangle"

                MDTextField:
                    id: phone_number
                    hint_text: "Phone Number*"
                    helper_text: "Include Country Code"
                    required: True
                    text_color: secondaryDarkColor
                    color_mode: "custom"
                    line_color_focus: 1, 1, 1, 1
                    mode: "rectangle"

                MDTextField:
                    id: regpassword
                    hint_text: "Password*"
                    password: True
                    required: True
                    text_color: secondaryDarkColor
                    color_mode: "custom"
                    line_color_focus: 1, 1, 1, 1
                    mode: "rectangle"

                MDTextField:
                    id: vregpassword
                    hint_text: "Verify Password*"
                    helper_text: "Ensure it matches Password"
                    password: True
                    required: True
                    text_color: secondaryDarkColor
                    color_mode: "custom"
                    line_color_focus: 1, 1, 1, 1
                    mode: "rectangle"

                MDTextField:
                    id: usecase
                    hint_text: "Use Case*"
                    helper_text: "Let us know how you plan to use the activity manager"
                    required: True
                    text_color: secondaryDarkColor
                    color_mode: "custom"
                    line_color_focus: 1, 1, 1, 1
                    mode: "rectangle"
                    multiline: True
                    height: self.height


    MDRaisedButton:
        text: "SIGN UP"
        padding_bottom: 15
        line_color: 0, 0, 0, 0
        pos_hint: {"center_x": .5, "center_y": .05}
        on_release: app.submit_form(first_name.text,last_name.text,company.text,email.text,phone_number.text,regpassword.text,vregpassword.text,usecase.text)
